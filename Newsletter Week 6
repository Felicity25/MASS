    window.onload = function () {
      const urlParams = new URLSearchParams(window.location.search);
      const name = urlParams.get('name');
      if (name) {
        const greeting = document.getElementById('personalGreeting');
        greeting.innerHTML = `Hey ${name} 👋`;
